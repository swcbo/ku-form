{
  "extends": "tsconfig/react-library.json",
  "exclude": ["lib", "build", "node_modules", "__tests__", "typings"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "declarationMap": false,
    "declaration": true,
    "declarationDir": "./typings",
    "jsx": "react-jsx"
  }
}
