{
  "extends": "tsconfig/react-library.json",
  "exclude": ["lib", "build", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "emitDeclarationOnly": true,
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "declarationDir": "./typings",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
